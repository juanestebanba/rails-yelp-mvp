<div class="container">
<h1> <%= @restaurant.name %></h1>
<p> Address: <%= @restaurant.address %></p>
<p> Phone number: <%= @restaurant.phone_number %></p>
<p>Type of food: <%= @restaurant.category %></p>

<br>

<h3>Review for <%= @restaurant.name %></h3>
<p><% @restaurant.reviews.each do |review| %></p>
<p>Rating: <%= review.rating %></p>
<p><%= review.content %></p>
<% end %>

<p><%= link_to "Edit this restaurant", edit_restaurant_path %></p>
<p><%= link_to "Create a review for this restaurant", new_restaurant_review_path(@restaurant) %></p>
<p><%= link_to "Back to List", restaurants_path %></p>
